@import "../base/params";

.com-section{
  display: flex;
  border-bottom: 1px solid $color-gd;
  padding: 8px;
  background-color: $color-gf;
  .el-form{
    width: 100%;
  }
  .com-pannel{
    border-bottom: 0;
  }
  .el-radio+.el-radio{
    margin-left: 10px;
  }
  .el-form-item{
    &.mb{
      margin-bottom: 12px;
    }
  }
  .el-textarea__inner{
    height: 110px;
  }
}

.com-form{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.com-table{
  flex: 1;
  display: flex;
  flex-direction: column;
  .com-table-header-cell{
    background-color: $main-ltcolor;
  }
  .com-table-detail {
    flex: 1;
    background-color: $color-gf;
    border-top: 1px solid $color-gd;
    .el-table:before, .el-table__fixed:before{
      display: none;
    }
  }
  &.mt{
    margin-top: 16px;
  }
  &.box-table{
    margin-top: 15px;
  }
  .table-header{
    line-height: 36px;
    padding: 0 12px;
    border-top: 2px solid $main-dkcolor;
    background-color: $color-gf;
    ul{
      float: right;
      li{
        float: left;
        padding: 0 15px;
        cursor: pointer;
        &.single{
          background-color: $color-gf;
        }
        &.double{
          background-color: $main-ltcolor;
        }
        &:hover{
          background-color: $main-dkcolor;
          color: $color-gf;
        }
      }
    }
  }
  .el-table td, .el-table th{
    padding: 2px 0;
  }
  .all-price{
    height: 48px;
    line-height: 48px;
    background-color: $color-gf;
    border-bottom: 1px solid $color-gd;
    ul{
      float: right;
      li{
        float: left;
        padding: 0 10px;
      }
    }
  }
}

.com-page{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color: $color-f5;
  .el-dialog__body{
    padding-top: 0;
  }
}

.com-dialog-s-title {
  font-size: 15px;
  margin: 16px 0;
  padding-left: 8px;
  font-weight: bold;
  border-left: 4px solid $main-color;
  line-height: 1;
  color: $main-color;
}

.com-pannel{
  padding: 8px 6px;
  display: flex;
  background-color: $color-gf;
  .el-col.min-width{
    min-width: 200px;
  }
  .el-form-item {
    margin-bottom: 0;
    margin-right: 10px;
    &.no-margin{
      .el-form-item__content{
        margin-left: 0!important;
      }
    }
    &.long-label{
      .el-form-item__label{
        width: 100px!important;
      }
      .el-form-item__content{
        margin-left: 100px!important;
      }
    }
    &.short-label{
      .el-form-item__label{
        width: 50px!important;
      }
      .el-form-item__content{
        margin-left: 50px!important;
      }
    }
    &.middle-label{
      .el-form-item__label{
        width: 60px!important;
      }
      .el-form-item__content{
        margin-left: 60px!important;
      }
    }
  }
}

.com-pannel{
  &.bold-title{
    font-size: 18px;
    font-weight: bold;
  }
  &.op-btn-list{
    margin-top: 4px;
    text-align: right;
  }
  .el-date-editor.el-input, .el-date-editor.el-input__inner, .el-select{
    width: 100%;
  }
}

.com-pagination{
  margin: 15px;
}
